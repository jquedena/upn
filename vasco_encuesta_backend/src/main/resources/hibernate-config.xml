<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="current_session_context_class">thread</property>
    <property name="format_sql">true</property>

    <mapping resource="pe/edu/upn/encuesta/entidad/Persona.hbm.xml"/>
    <mapping resource="pe/edu/upn/encuesta/entidad/TipoControl.hbm.xml"/>
    <mapping resource="pe/edu/upn/encuesta/entidad/Inquilino.hbm.xml"/>
    <mapping resource="pe/edu/upn/encuesta/entidad/Encuesta.hbm.xml"/>
    <mapping resource="pe/edu/upn/encuesta/entidad/Pregunta.hbm.xml"/>
    <mapping resource="pe/edu/upn/encuesta/entidad/EncuestaRespuesta.hbm.xml"/>
    <mapping resource="pe/edu/upn/encuesta/entidad/PreguntaRespuesta.hbm.xml"/>

